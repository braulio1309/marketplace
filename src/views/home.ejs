<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%- include ('partials/head')%>

        <title>
            <%=title%>
        </title>
</head>

<body class="bg-dark">
    <%- include ('partials/navBar')%>

        <div class="jumbotron jumbotron-image color-grey-light"
            style="background-image: url('https://mdbootstrap.com/img/Photos/Others/clothes(4)-crop.jpg'); height: 400px;">
            <div class="mask rgba-black-strong d-flex align-items-center h-100">
                <div class="container text-center white-text py-5">
                    <h1 class="mb-0">Ucab MarketPlace</h1>
                </div>
            </div>
        </div>

        <main>
            <div class="container">
                <!--Section: Block Content-->
                <section>

                    <h4 class="text-center my-5"><strong>Categorias</strong></h4>

                    <!-- Grid row -->
                    <div class="row">
                        <% if(categoria!==undefined && categoria.length>0){%>
                            <% for (var i=0; i<categoria.length; i++) {%>

                                <!-- Grid column -->
                                <div class="col-md-6 col-lg-4 mb-4">

                                    <!-- Card -->
                                    <div class="">

                                        <div class="view zoom brighten z-depth-2 rounded">
                                            <img class="img-fluid" src="<%=categoria[i].img_ruta%>" alt="Sample">
                                            <a href="/categoria/<%=categoria[i].categoria_id_pkey%>" class="text-white">
                                                <div class="mask card-mask-color">
                                                    <div class="d-flex align-items-end h-100 p-3">
                                                        <h5 class="mb-0">
                                                            <%=categoria[i].nombre%>
                                                        </h5>
                                                    </div>
                                                </div>
                                            </a>
                                        </div>

                                    </div>
                                    <!-- Card -->

                                </div>
                                <!-- Grid column -->
                                <%}%>
                                    <%}%>
                    </div>
                    <!-- Grid row -->

                </section>
                <!--Section: Block Content-->

                <!--Section: Block Content-->
                <section>

                    <h4 class="text-center mt-4 mb-5"><strong>Productos</strong></h4>

                    <!-- Grid row -->
                    <div class="row">
                        <% if(product!==undefined && product.length>0){%>
                            <% for (var i=0; i<product.length; i++) {%>

                                <!-- Grid column -->
                                <div class="col-md-4 mb-5">

                                    <!-- Card -->
                                    <div class="card bg-dark">

                                        <div class="view zoom overlay">
                                            <a href="/product/<%=product[i].producto_id_pkey%>">
                                                <img class="img-fluid w-100" src="<%=product[i].ruta%>" alt="Sample">
                                            </a>
                                        </div>

                                        <div class="card-body text-center pt-4">

                                            <h5>
                                                <%=product[i].nombre%>
                                            </h5>

                                            <p><span class="mr-1"><strong>
                                                        <%=product[i].precio%>
                                                    </strong></span></p>
                                            <a href="/insertar-carrito/<%=product[i].producto_id_pkey%>" type="button" class="btn btn-primary btn-sm mr-1 mb-2"><i
                                                    class="fas fa-shopping-cart pr-2"></i>AÃ±adir al carrito</a>
                                            <a href="/product/<%=product[i].producto_id_pkey%>">
                                                <button type="button" class="btn btn-light btn-sm mr-1 mb-2">
                                                    <i class="fas fa-info-circle pr-2"></i>Detalles
                                                </button>
                                            </a>

                                        </div>

                                    </div>
                                    <!-- Card -->

                                </div>
                                <!-- Grid column -->
                                <%}%>
                                    <%}%>
                    </div>
                    <!-- Grid row -->

                </section>
                <!--Section: Block Content-->


            </div>
        </main>

        <%- include ('partials/footer')%>

            <%- include ('partials/scripts')%>
</body>